{% extends "node--tp-post--tp-metro-tile.html.twig" %}
{% block featured_post %}
  {% set view_row_index = elements['#mt_view_index'] %}
  {% if view_row_index == 2 or view_row_index == 3 %}
    {% set field_tp_pst_image_styled = content.field_tp_pst_image.0 %}
    {% set field_tp_pst_image_styled = field_tp_pst_image_styled|merge({'#image_style': 'mt_metro_tile_wide_image'}) %}
  {% else %}
    {% set field_tp_pst_image_styled = content.field_tp_pst_image %}
  {% endif %}
  {{ field_tp_pst_image_styled }}
{% endblock %}
