{{ attach_library('njalaapp/flippy') }}
<div class="flippy">
  <div class="row">
    {% if first %}
      <div class="col">
        <div class="flippy-first text-center position-relative">
          <div class="flippy-label"><small>{{ 'First'|t }}</small></div>
          <div class="flippy-link">{{ first }}</div>
        </div>
      </div>
    {% endif %}
    {% if prev %}
      <div class="col">
        <div class="flippy-previous text-center position-relative">
          <i class="fas fa-chevron-left fa-2x"></i>
          <div class="flippy-label"><small>{{ 'Previous'|t }}</small></div>
          <div class="flippy-link">{{ prev }}</div>
        </div>
      </div>
    {% endif %}
    {% if random %}
      <div class="col">
        <div class="flippy-random text-center position-relative">
          <div class="flippy-label"><small>{{ 'Random'|t }}</small></div>
          <div class="flippy-link">{{ random }}</div>
        </div>
      </div>
    {% endif %}
    {% if next %}
      <div class="col">
        <div class="flippy-next text-center position-relative">
          <i class="fas fa-chevron-right fa-2x"></i>
          <div class="flippy-label"><small>{{ 'Next'|t }}</small></div>
          <div class="flippy-link">{{ next }}</div>
        </div>
      </div>
    {% endif %}
    {% if last %}
      <div class="col">
        <div class="flippy-last text-center position-relative">
          <div class="flippy-label"><small>{{ 'Last'|t }}</small></div>
          <div class="flippy-link">{{ last }}</div>
        </div>
      </div>
    {% endif %}
  </div>
</div>
